{
  "openapi": "3.1.0",
  "info": {
    "title": "Qdrant RAG Backend",
    "version": "1.0.0",
    "description": "Retrieve top-k context from Qdrant, to be used FIRST for answering user questions."
  },
  "servers": [{ "url": "https://your-railway-domain.up.railway.app" }],
  "paths": {
    "/search": {
      "post": {
        "operationId": "searchQdrant",
        "summary": "Retrieve context from the vector DB (use this FIRST)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "query": { "type": "string" },
                  "top_k": { "type": "integer", "default": 5 },
                  "score_threshold": { "type": ["number", "null"] }
                },
                "required": ["query"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Top-k retrieved chunks"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" }
    }
  }
}
